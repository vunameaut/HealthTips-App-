<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Track when checked (Dark Mode - ON) trong Dark Theme -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient
                android:angle="0"
                android:startColor="#1E293B"
                android:centerColor="#0F172A"
                android:endColor="#020617"
                android:type="linear"/>
            <stroke
                android:width="1dp"
                android:color="#334155"/>
            <size
                android:width="68dp"
                android:height="36dp"/>
        </shape>
    </item>

    <!-- Track when unchecked (Light Mode - OFF) trong Dark Theme -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient
                android:angle="0"
                android:startColor="#FCD34D"
                android:centerColor="#FBBF24"
                android:endColor="#F59E0B"
                android:type="linear"/>
            <size
                android:width="68dp"
                android:height="36dp"/>
        </shape>
    </item>
</selector>

