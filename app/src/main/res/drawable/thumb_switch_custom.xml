<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Thumb when checked (Dark Mode - ON) -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Nền trắng -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/white"/>
                    <size
                        android:width="32dp"
                        android:height="32dp"/>
                </shape>
            </item>
            <!-- Icon mặt trăng -->
            <item
                android:width="20dp"
                android:height="20dp"
                android:gravity="center"
                android:drawable="@drawable/ic_moon"/>
        </layer-list>
    </item>

    <!-- Thumb when unchecked (Light Mode - OFF) -->
    <item>
        <layer-list>
            <!-- Nền trắng -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/white"/>
                    <size
                        android:width="32dp"
                        android:height="32dp"/>
                </shape>
            </item>
            <!-- Icon mặt trời -->
            <item
                android:width="20dp"
                android:height="20dp"
                android:gravity="center"
                android:drawable="@drawable/ic_sun"/>
        </layer-list>
    </item>
</selector>
