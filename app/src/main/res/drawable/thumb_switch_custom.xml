<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Thumb when checked (Dark Mode - ON) trong Light Theme -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Shadow effect -->
            <item
                android:left="2dp"
                android:top="2dp">
                <shape android:shape="oval">
                    <solid android:color="#40000000"/>
                    <size
                        android:width="32dp"
                        android:height="32dp"/>
                </shape>
            </item>
            <!-- Nền trắng với viền xám nhẹ -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#FFFFFF"/>
                    <stroke
                        android:width="1dp"
                        android:color="#E5E7EB"/>
                    <size
                        android:width="32dp"
                        android:height="32dp"/>
                </shape>
            </item>
            <!-- Icon mặt trăng -->
            <item
                android:width="20dp"
                android:height="20dp"
                android:gravity="center"
                android:drawable="@drawable/ic_moon"/>
        </layer-list>
    </item>

    <!-- Thumb when unchecked (Light Mode - OFF) trong Light Theme -->
    <item>
        <layer-list>
            <!-- Shadow effect -->
            <item
                android:left="2dp"
                android:top="2dp">
                <shape android:shape="oval">
                    <solid android:color="#40000000"/>
                    <size
                        android:width="32dp"
                        android:height="32dp"/>
                </shape>
            </item>
            <!-- Nền trắng -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#FFFFFF"/>
                    <size
                        android:width="32dp"
                        android:height="32dp"/>
                </shape>
            </item>
            <!-- Icon mặt trời -->
            <item
                android:width="20dp"
                android:height="20dp"
                android:gravity="center"
                android:drawable="@drawable/ic_sun"/>
        </layer-list>
    </item>
</selector>
