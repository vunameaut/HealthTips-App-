<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="start">

    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="bottom"
        android:background="@drawable/ai_avatar_background_modern"
        android:src="@drawable/ic_smart_toy"
        android:padding="10dp"
        android:tint="@android:color/white"
        android:contentDescription="AI Assistant"
        android:elevation="2dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="64dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/ai_message_background_modern"
            android:padding="18dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✨ AI đang trả lời"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginEnd="12dp" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:indeterminate="true"
                app:indicatorSize="20dp"
                app:trackColor="?attr/colorSurfaceVariant"
                app:indicatorColor="?attr/colorPrimary" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
