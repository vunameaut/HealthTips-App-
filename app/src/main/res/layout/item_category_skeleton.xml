<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="180dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Skeleton Image - khớp với real category image -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/skeleton_shimmer" />

        <!-- Skeleton Text - khớp với real category name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/gradient_category_text_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <View
                android:layout_width="80dp"
                android:layout_height="14dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/skeleton_shimmer" />

            <View
                android:layout_width="60dp"
                android:layout_height="14dp"
                android:background="@drawable/skeleton_shimmer" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
