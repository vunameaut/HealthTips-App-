<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="2dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Thumbnail video -->
        <ImageView
            android:id="@+id/imageViewThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/video_placeholder"
            android:background="@color/video_background" />

        <!-- Gradient overlay ở cuối video để text dễ đọc -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradient_overlay_video" />

        <!-- Duration video (góc dưới bên phải) -->
        <TextView
            android:id="@+id/textViewDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="6dp"
            android:background="@drawable/duration_background"
            android:text="@string/duration_placeholder"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp" />

        <!-- View count (góc dưới bên trái) -->
        <TextView
            android:id="@+id/textViewViewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="6dp"
            android:drawableStart="@drawable/ic_eye_small"
            android:drawablePadding="2dp"
            android:text="@string/views_placeholder"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center_vertical" />

        <!-- Play icon ở giữa -->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_play_circle"
            android:alpha="0.8"
            android:contentDescription="@string/play_video" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
