<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/iv_ai_avatar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/message_container"
        android:background="@drawable/ai_avatar_background_modern"
        android:src="@drawable/ic_smart_toy"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:contentDescription="AI Assistant"
        app:tint="@android:color/white"
        android:elevation="2dp" />

    <LinearLayout
        android:id="@+id/message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/iv_ai_avatar"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ai_message_background_modern">

                <TextView
                    android:id="@+id/tv_ai_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="16sp"
                    android:lineSpacingExtra="6dp"
                    android:minWidth="100dp"
                    android:maxWidth="280dp"
                    android:text="Đây là phản hồi từ AI về sức khỏe" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_ai_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="6dp"
            android:layout_marginStart="8dp"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorSecondary"
            android:alpha="0.7"
            android:text="14:31" />

    </LinearLayout>

</RelativeLayout>