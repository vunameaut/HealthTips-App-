<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background_dark"
    android:gravity="center">

    <!-- Logo hoặc icon ứng dụng -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_primary_button"
        android:src="@drawable/ic_person"
        android:scaleType="center"
        android:contentDescription="Avatar người dùng" />

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin cá nhân"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Card hiển thị thông tin người dùng -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:cardBackgroundColor="@color/background_dark_alt"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/tvUserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Đang tải thông tin người dùng..."
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:gravity="center" />

    </androidx.cardview.widget.CardView>

    <!-- Nút đăng xuất -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Đăng xuất"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/bg_logout_button"
        app:cornerRadius="28dp"
        android:layout_marginTop="16dp" />

    <!-- Thông tin phiên bản (tùy chọn) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health Tips App v1.0"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:layout_marginTop="32dp"
        android:alpha="0.7" />

</LinearLayout>
