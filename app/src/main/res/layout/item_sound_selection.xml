<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_sound_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:minHeight="72dp">

        <!-- Sound Icon -->
        <ImageView
            android:id="@+id/iv_sound_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_circle_button"
            android:padding="8dp"
            android:src="@drawable/ic_music_note"
            android:tint="?attr/colorOnSecondaryContainer"
            app:tint="?attr/colorOnSecondaryContainer"
            tools:src="@drawable/ic_alarm" />

        <!-- Sound Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Sound Name -->
            <TextView
                android:id="@+id/tv_sound_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                tools:text="Báo thức mặc định" />

            <!-- Sound Description -->
            <TextView
                android:id="@+id/tv_sound_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="Âm thanh báo thức" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Preview Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_preview_sound"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                app:icon="@drawable/ic_play_arrow"
                app:iconSize="24dp"
                app:iconTint="?attr/colorPrimary"
                android:contentDescription="@string/preview_sound"
                android:tooltipText="@string/preview_sound" />

            <!-- Selection Indicator -->
            <ImageView
                android:id="@+id/iv_selected_indicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                android:tint="?attr/colorPrimary"
                app:tint="?attr/colorPrimary"
                android:visibility="invisible"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <!-- Animated Wave Indicator (when playing) -->
    <LinearLayout
        android:id="@+id/ll_wave_indicator"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="?attr/colorPrimaryContainer"
        tools:visibility="visible">

        <!-- Animated bars for sound visualization -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:layout_margin="1dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:layout_margin="1dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:layout_margin="1dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:layout_margin="1dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
