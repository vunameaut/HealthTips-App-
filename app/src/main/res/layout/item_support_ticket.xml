<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Ticket ID and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/ticketIdText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/inter_medium"
                tools:text="#TK12345" />

            <com.google.android.material.chip.Chip
                android:id="@+id/statusChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                app:chipMinHeight="24dp"
                app:chipBackgroundColor="@color/status_active"
                android:textColor="@color/white"
                tools:text="Đang mở" />

        </LinearLayout>

        <!-- Ticket Type Badge -->
        <TextView
            android:id="@+id/ticketTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/primary_color"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginBottom="4dp"
            tools:text="Báo cáo lỗi" />

        <!-- Subject -->
        <TextView
            android:id="@+id/subjectText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/inter_semibold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"
            tools:text="Ứng dụng bị crash khi mở video" />

        <!-- Description Preview -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/inter_regular"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"
            tools:text="Khi tôi cố gắng mở video trong tab Video ngắn, ứng dụng bị đóng đột ngột..." />

        <!-- Image Thumbnail (if available) -->
        <ImageView
            android:id="@+id/imageThumbnail"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_input_field"
            android:contentDescription="@string/image_preview"
            android:visibility="gone"
            tools:visibility="visible"
            tools:src="@drawable/ic_image_placeholder" />

        <!-- Footer: Date and Response Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_clock"
                app:tint="?attr/colorOnSurfaceVariant"
                android:layout_marginEnd="4dp"
                android:contentDescription="@string/ticket_created_at" />

            <TextView
                android:id="@+id/createdAtText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/inter_regular"
                tools:text="2 ngày trước" />

            <!-- Response Indicator -->
            <LinearLayout
                android:id="@+id/responseIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/success_color"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="@string/ticket_admin_response" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã phản hồi"
                    android:textSize="12sp"
                    android:textColor="@color/success_color"
                    android:fontFamily="@font/inter_medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

