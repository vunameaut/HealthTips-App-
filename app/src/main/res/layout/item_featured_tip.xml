<?xml version="1.0" encoding="utf-8"?>
<!-- Item layout cho Featured Tips - Card lớn với gradient overlay -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="200dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/background_dark">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Hình ảnh nền -->
        <ImageView
            android:id="@+id/imageViewHealthTip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/health_tip_image"
            tools:src="@drawable/placeholder_image" />

        <!-- Gradient overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_overlay" />

        <!-- Nội dung text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Category Badge (optional) -->
            <TextView
                android:id="@+id/textViewCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_featured_badge"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="Dinh dưỡng"
                tools:visibility="visible" />

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/textViewHealthTipTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4"
                tools:text="Bí quyết giữ sức khỏe mùa đông và tăng cường miễn dịch" />

            <!-- Button Đọc ngay -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonReadNow"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:text="Đọc ngay"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:backgroundTint="@color/primary_button_start"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:cornerRadius="20dp"
                app:icon="@android:drawable/ic_menu_view"
                app:iconTint="@android:color/white"
                app:iconSize="16dp"
                style="@style/Widget.Material3.Button.ElevatedButton" />

        </LinearLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
