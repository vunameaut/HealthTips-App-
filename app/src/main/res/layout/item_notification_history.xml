<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Unread Indicator -->
        <View
            android:id="@+id/unreadIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_circle_primary"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iconNotification"
            app:layout_constraintBottom_toBottomOf="@id/iconNotification"
            tools:visibility="visible" />

        <!-- Icon -->
        <ImageView
            android:id="@+id/iconNotification"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_notifications"
            app:tint="?attr/colorPrimary"
            app:layout_constraintStart_toEndOf="@id/unreadIndicator"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textSize="15sp"
            android:textColor="?android:textColorPrimary"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Bạn có bình luận mới từ Nguyễn Văn A"
            app:layout_constraintStart_toEndOf="@id/iconNotification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iconNotification" />

        <!-- Body -->
        <TextView
            android:id="@+id/textBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:textColor="?android:textColorSecondary"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Rất hay và bổ ích, cảm ơn bạn đã chia sẻ những thông tin hữu ích này"
            app:layout_constraintStart_toStartOf="@id/textTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textTitle" />

        <!-- Time & Type Badge Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/textBody"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textBody"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Time -->
            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="?android:textColorTertiary"
                tools:text="14:30" />

            <!-- Type Badge -->
            <TextView
                android:id="@+id/textTypeBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_badge_rounded"
                tools:text="BÀI VIẾT MỚI" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
