<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_reminder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:minHeight="100dp">

        <!-- Left Icon & Time -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="20dp">

            <!-- Icon Container -->
            <LinearLayout
                android:id="@+id/icon_container"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/circle_background_primary"
                android:gravity="center"
                android:elevation="2dp">

                <!-- Status Indicator -->
                <View
                    android:id="@+id/view_status_indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle_background"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_reminder_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_alarm"
                    android:tint="@color/white"
                    app:tint="@color/white"
                    tools:src="@drawable/ic_alarm" />

            </LinearLayout>

            <!-- Time Display -->
            <TextView
                android:id="@+id/tv_reminder_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:textSize="12sp"
                tools:text="08:30" />

        </LinearLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_reminder_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Uống thuốc vitamin" />

                <!-- Status Badge -->
                <TextView
                    android:id="@+id/tv_status_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/badge_active"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="@string/active"
                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:text="Hoạt động" />

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/tv_reminder_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Uống 1 viên vitamin D sau bữa sáng" />

            <!-- Repeat Info & Next Alarm -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Repeat Type -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/chip_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_repeat"
                        android:tint="?attr/colorPrimary"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/tv_repeat_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold"
                        tools:text="Hàng ngày" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Next Alarm Time -->
                <LinearLayout
                    android:id="@+id/layout_next_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_schedule"
                        android:tint="?attr/colorOnSurfaceVariant"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tv_next_alarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="Còn 2 giờ 30 phút" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Actions Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <!-- Toggle Switch -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/sw_reminder_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                tools:checked="true" />

            <!-- Menu Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reminder_menu"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_more_vert"
                app:iconSize="20dp"
                app:iconTint="?attr/colorOnSurfaceVariant"
                android:contentDescription="@string/reminder_options" />

        </LinearLayout>

    </LinearLayout>

    <!-- Expansion Panel (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/layout_expansion_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="?attr/colorSurfaceVariant"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        tools:visibility="visible">

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="?attr/colorOutlineVariant" />

        <!-- Sound Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_volume_up"
                android:tint="?attr/colorOnSurfaceVariant"
                app:tint="?attr/colorOnSurfaceVariant" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/reminder_sound_label"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/tv_sound_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                tools:text="Báo thức mặc định" />

        </LinearLayout>

        <!-- Vibrate Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_vibration"
                android:tint="?attr/colorOnSurfaceVariant"
                app:tint="?attr/colorOnSurfaceVariant" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/vibrate"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/tv_vibrate_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                tools:text="Bật" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_reminder"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/edit"
                app:icon="@drawable/ic_edit"
                app:iconSize="18dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete_reminder"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                app:icon="@drawable/ic_delete"
                app:iconSize="18dp"
                app:iconTint="?attr/colorError"
                android:textColor="?attr/colorError" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
