<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Thumbnail hình ảnh mẹo sức khỏe -->
        <ImageView
            android:id="@+id/imageViewHealthTip"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/health_tip_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/placeholder_image" />

        <!-- Tiêu đề mẹo sức khỏe -->
        <TextView
            android:id="@+id/textViewHealthTipTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageViewHealthTip"
            app:layout_constraintEnd_toStartOf="@id/imageViewFavorite"
            tools:text="Cách uống nước đúng cách để tăng cường sức khỏe" />

        <!-- Nội dung tóm tắt -->
        <TextView
            android:id="@+id/textViewHealthTipSummary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/textViewHealthTipTitle"
            app:layout_constraintStart_toEndOf="@id/imageViewHealthTip"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Nước là thành phần thiết yếu cho cơ thể con người. Uống đủ nước mỗi ngày giúp cơ thể hoạt động hiệu quả và ngăn ngừa mất nước..." />

        <!-- Ngày đăng -->
        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintTop_toBottomOf="@id/textViewHealthTipSummary"
            app:layout_constraintStart_toEndOf="@id/imageViewHealthTip"
            tools:text="24/06/2023" />

        <!-- Lượt xem -->
        <TextView
            android:id="@+id/textViewViewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:drawableStart="@drawable/ic_view"
            android:drawablePadding="4dp"
            app:layout_constraintTop_toBottomOf="@id/textViewHealthTipSummary"
            app:layout_constraintStart_toEndOf="@id/textViewDate"
            tools:text="128" />

        <!-- Lượt thích -->
        <TextView
            android:id="@+id/textViewLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:drawableStart="@drawable/ic_like"
            android:drawablePadding="4dp"
            app:layout_constraintTop_toBottomOf="@id/textViewHealthTipSummary"
            app:layout_constraintStart_toEndOf="@id/textViewViewCount"
            tools:text="32" />

        <!-- Icon yêu thích -->
        <ImageView
            android:id="@+id/imageViewFavorite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/favorite"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/ic_favorite_border" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
