<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- User avatar (smaller for replies) -->
    <ImageView
        android:id="@+id/iv_reply_user_avatar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_user_placeholder"
        android:background="@drawable/circle_background"
        android:contentDescription="@string/user_avatar" />

    <!-- Reply content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- User name and time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_reply_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurface"
                tools:text="Người dùng" />

            <TextView
                android:id="@+id/tv_reply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="11sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="1 giờ trước" />

        </LinearLayout>

        <!-- Reply text -->
        <TextView
            android:id="@+id/tv_reply_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurface"
            android:lineSpacingExtra="1dp"
            tools:text="Đây là câu trả lời cho bình luận" />

        <!-- Reply actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Like button for reply -->
            <LinearLayout
                android:id="@+id/btn_like_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iv_like_reply"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_heart_outline"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:id="@+id/tv_reply_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:textSize="11sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="2" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
