<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Video nền -->
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Thumbnail -->
    <ImageView
        android:id="@+id/imgThumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <!-- Play/Pause -->
    <ImageView
        android:id="@+id/imgPlayPause"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_circle_semi_transparent"
        android:padding="16dp"
        android:src="@drawable/ic_play_arrow"
        app:tint="@color/white" />

    <!-- Nút tương tác -->
    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="48dp"
        android:orientation="vertical">

        <!-- Like -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="28dp">

            <ImageView
                android:id="@+id/btnLike"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_circle_semi_transparent"
                android:padding="16dp"
                android:src="@drawable/ic_heart_outline"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/txtLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="1.2K" />
        </LinearLayout>

        <!-- Comment -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="28dp">

            <ImageView
                android:id="@+id/btnComment"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_circle_semi_transparent"
                android:padding="16dp"
                android:src="@drawable/ic_comment"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Bình luận" />
        </LinearLayout>

        <!-- Share -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnShare"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_circle_semi_transparent"
                android:padding="16dp"
                android:src="@drawable/ic_share"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Chia sẻ" />
        </LinearLayout>
    </LinearLayout>

    <!-- Gradient dưới -->
    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_bottom_overlay" />

    <!-- Thông tin video -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/videoInfoScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:background="@drawable/gradient_video_info_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Tiêu đề video" />

            <TextView
                android:id="@+id/txtCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:scrollHorizontally="false"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:text="Mô tả video rất rất dài mô tả video rất rất dài mô tả video rất rất dài" />

            <TextView
                android:id="@+id/btnSeeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem thêm"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:paddingTop="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/txtViewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_visibility"
                    android:drawablePadding="4dp"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    tools:text="1.2K lượt xem" />

                <TextView
                    android:id="@+id/txtUploadDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:drawableStart="@drawable/ic_schedule"
                    android:drawablePadding="4dp"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    tools:text="2 ngày trước" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
