<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Ảnh thumbnail video -->
        <ImageView
            android:id="@+id/iv_video_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/video_thumbnail"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_video_placeholder" />

        <!-- Nút Play -->
        <ImageView
            android:id="@+id/iv_play_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/play_pause_video"
            android:src="@drawable/ic_play_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/iv_video_thumbnail"
            app:layout_constraintEnd_toEndOf="@+id/iv_video_thumbnail"
            app:layout_constraintStart_toStartOf="@+id/iv_video_thumbnail"
            app:layout_constraintTop_toTopOf="@+id/iv_video_thumbnail"
            app:tint="@android:color/white" />

        <!-- Thông tin video -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_video_thumbnail">

            <!-- Tiêu đề video -->
            <TextView
                android:id="@+id/tv_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Hướng dẫn tập luyện giảm cân hiệu quả" />

            <!-- Mô tả video -->
            <TextView
                android:id="@+id/tv_video_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"
                tools:text="Video hướng dẫn chi tiết các bài tập giảm cân hiệu quả tại nhà" />

            <!-- Thông tin lượt xem, thời gian đăng và nút like -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_view_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="10sp"
                    app:drawableStartCompat="@drawable/ic_visibility"
                    app:drawableTint="?attr/colorOnSurfaceVariant"
                    tools:ignore="SmallSp"
                    tools:text="1.2K lượt xem" />

                <TextView
                    android:id="@+id/tv_upload_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="10sp"
                    app:drawableStartCompat="@drawable/ic_schedule"
                    app:drawableTint="?attr/colorOnSurfaceVariant"
                    tools:ignore="SmallSp"
                    tools:text="2 ngày trước" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Nút like -->
                <ImageView
                    android:id="@+id/iv_like_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical|end"
                    android:contentDescription="@string/like_video"
                    android:src="@drawable/ic_heart_outline"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
