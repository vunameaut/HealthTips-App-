<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet_comments">

    <!-- Header với tiêu đề và nút đóng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="?attr/colorSurface">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/reply_comment_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center" />

        <ImageView
            android:id="@+id/iv_close_reply"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/close_reply"
            app:tint="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOutline" />

    <!-- Thông tin bình luận gốc -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/colorSurfaceVariant">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/replying_to"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_parent_comment_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Trả lời Người dùng: Đây là nội dung bình luận gốc..." />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOutline" />

    <!-- Input container - đặt nút gửi bên cạnh input, không phải bên dưới -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:padding="16dp"
        android:background="?attr/colorSurface">

        <!-- EditText với chiều cao cố định để nút gửi luôn hiển thị -->
        <EditText
            android:id="@+id/et_reply_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:hint="@string/reply_input_hint"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/colorOnSurfaceVariant"
            android:background="@drawable/bg_comment_input"
            android:padding="12dp"
            android:minHeight="48dp"
            android:maxHeight="120dp"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:inputType="textMultiLine|textCapSentences"
            android:gravity="top|start"
            android:imeOptions="actionSend"
            android:singleLine="false" />

        <!-- Nút gửi luôn hiển thị bên cạnh input -->
        <ImageView
            android:id="@+id/iv_send_reply"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_send"
            android:background="@drawable/bg_send_button"
            android:padding="12dp"
            android:contentDescription="@string/send_reply"
            android:layout_marginBottom="0dp"
            app:tint="@android:color/white" />

    </LinearLayout>

</LinearLayout>
