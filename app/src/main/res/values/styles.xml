<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style chung cho ứng dụng -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Các thuộc tính chung -->
        <item name="colorPrimary">@color/primary_button_end</item>
        <item name="colorPrimaryDark">@color/primary_button_start</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Style cho TextInputLayout -->
    <style name="AppTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_button_end</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/background_dark_alt</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="hintTextColor">@color/primary_button_end</item>
    </style>

    <!-- Style cho nút chính -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textColor">@color/primary_button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <!-- Style cho nút phụ -->
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/bg_secondary_button</item>
        <item name="android:textColor">@color/secondary_button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <!-- Style cho Bottom Sheet Dialog với bo góc -->
    <style name="BottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/BottomSheetShape</item>
    </style>

    <style name="BottomSheetShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>

    <!-- Style cho Switch Material -->
    <style name="Theme.SwitchMaterial" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
    </style>

    <!-- Style cho Reminder Cards -->
    <style name="ReminderCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorOutlineVariant</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <!-- Style cho Reminder Buttons -->
    <style name="ReminderButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Style cho Reminder Text Buttons -->
    <style name="ReminderTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textSize">12sp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <!-- Các style Typography đã được di chuyển sang typography.xml -->

    <!-- Theme đặc biệt cho AlarmActivity -->
    <style name="Theme.Doan.AlarmActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowShowWallpaper">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Hiển thị trên lock screen -->
        <item name="android:showOnLockScreen">true</item>
        <!-- Tự động bật màn hình -->
        <item name="android:turnScreenOn">true</item>
        <!-- Không hiển thị trong recent apps -->
        <item name="android:excludeFromRecents">true</item>
        <!-- Colors -->
        <item name="colorPrimary">@color/primary_button_end</item>
        <item name="colorPrimaryDark">@color/primary_button_start</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
</resources>
