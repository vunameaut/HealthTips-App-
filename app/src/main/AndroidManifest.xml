<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Quyền truy cập Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Quyền cho thông báo và alarm -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />


    <!-- Quyền truy cập bộ nhớ -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <!-- Quyền truy cập ảnh cho Android 13+ (API 33+) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- Quyền tắt tối ưu hóa pin để hoạt động trong Doze mode -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <!-- Quyền foreground service cho WorkManager -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Quyền foreground service đặc biệt cho Android 14+ (API 34+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />

    <application
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.Doan"
        android:name="androidx.multidex.MultiDexApplication"
        tools:targetApi="31">

        <!-- Activities -->
        <activity
            android:name=".presentation.auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.auth.ForgotPasswordActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.auth.RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.home.HomeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".presentation.category.detail.CategoryDetailListActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.home.AllHealthTipsActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.profile.SettingsActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.healthtip.detail.HealthTipDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.HealthTipDetail" />

        <!-- Activity Test cho giao diện mới -->
        <activity
            android:name=".presentation.healthtip.detail.HealthTipDetailTestActivity"
            android:exported="true"
            android:theme="@style/Theme.HealthTipDetail"
            android:label="Test Giao Diện Mới" />

        <!-- SearchActivity -->
        <activity
            android:name=".presentation.search.SearchActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <!-- VideoActivity: thêm mới để tránh ActivityNotFoundException -->
        <activity
            android:name=".presentation.video.VideoActivity"
            android:exported="false" />

        <!-- SingleVideoPlayerActivity: Phát video đơn lẻ từ search results -->
        <activity
            android:name=".presentation.video.SingleVideoPlayerActivity"
            android:exported="false"
            android:theme="@style/Theme.VideoPlayer" />

        <!-- LikedVideosPlayerActivity: Phát video đã like với khả năng lướt -->
        <activity
            android:name=".presentation.profile.LikedVideosPlayerActivity"
            android:exported="false"
            android:theme="@style/Theme.VideoPlayer" />

        <!-- Màn hình chỉnh sửa thông tin cá nhân -->
        <activity
            android:name=".presentation.profile.EditProfileActivity"
            android:exported="false" />

        <!-- Debug Activity -->
        <activity
            android:name=".presentation.debug.ReminderTestActivity"
            android:exported="true"
            android:label="Debug Thông Báo" />

        <!-- Activity chọn âm thanh cho reminder -->
        <activity
            android:name=".presentation.reminder.SoundSelectionActivity"
            android:exported="false"
            android:label="Chọn âm thanh"
            android:theme="@style/Theme.Doan" />

        <!-- Activity hiển thị báo thức reminder -->
        <activity
            android:name=".presentation.reminder.AlarmActivity"
            android:exported="false"
            android:label="Báo thức"
            android:theme="@style/Theme.Doan"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:excludeFromRecents="true" />

        <!-- Settings and Privacy Activities -->
        <activity
            android:name=".presentation.settings.SettingsAndPrivacyActivity"
            android:exported="false" />

        <!-- Account Section Activities -->
        <activity
            android:name=".presentation.settings.account.AccountManagementActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.settings.account.PrivacySettingsActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.settings.account.SecuritySettingsActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.settings.account.PermissionsSettingsActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.settings.account.SecurityAndPermissionsActivity"
            android:exported="false"
            android:label="@string/security_and_permissions" />

        <!-- Content and Display Section Activities -->
        <activity
            android:name=".presentation.settings.content.NotificationSettingsActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.settings.content.LanguageSettingsActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.settings.content.DisplaySettingsActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.settings.content.TermsPolicyActivity"
            android:exported="false"
            android:label="@string/terms_policy" />

        <activity
            android:name=".presentation.settings.content.TermsPolicyDetailActivity"
            android:exported="false" />

        <!-- Support and About Section Activities -->
        <activity
            android:name=".presentation.settings.support.ReportIssueActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.settings.support.SupportHelpActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.settings.support.FAQActivity"
            android:exported="false"
            android:label="@string/faq" />


        <!-- New Support Activities -->
        <activity
            android:name=".presentation.support.CreateSupportTicketActivity"
            android:exported="false"
            android:label="@string/create_ticket" />

        <activity
            android:name=".presentation.support.SupportTicketsActivity"
            android:exported="false"
            android:label="@string/my_tickets" />

        <activity
            android:name=".presentation.support.TicketDetailActivity"
            android:exported="false"
            android:label="@string/ticket_detail_title" />

        <!-- About Activities -->
        <activity
            android:name=".presentation.about.AboutActivity"
            android:exported="false"
            android:label="@string/about_app" />

        <activity
            android:name=".presentation.about.LegalDocumentActivity"
            android:exported="false" />

        <!-- Broadcast Receivers cho Reminder -->
        <receiver
            android:name=".receivers.ReminderBroadcastReceiver"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name=".receivers.ReminderActionReceiver"
            android:enabled="true"
            android:exported="false" />

        <!-- Receiver để khởi động lại reminder sau khi boot -->
        <receiver
            android:name=".receivers.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- Services -->
        <service
            android:name=".services.ReminderForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <!-- Thêm property cho specialUse theo yêu cầu Android 14+ -->
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="explanation_needed" />
        </service>

    </application>

</manifest>